---
import { IconTimelineEventText, IconCode,  IconSmartHome, IconStack2, IconWriting, IconBook  } from "@tabler/icons-react"
import { getI18N } from "@/i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

let ruta = ''
if (currentLocale !== 'es'){
    ruta = `${currentLocale}/`
}

const links = [
    { text: `${i18n.HEADER.NAVBAR.EXPERIENCE}`, url: `/${ruta}#${i18n.HEADER.NAVBAR.EXPERIENCE}`},
    { text: `${i18n.HEADER.NAVBAR.PROJECTS}`, url: `/${ruta}#${i18n.HEADER.NAVBAR.PROJECTS}` },
    { text: `${i18n.HEADER.NAVBAR.HOME}`, url: `/${ruta}#${i18n.HEADER.NAVBAR.HOME}` },
  ];
---

<div class="fixed z-50 bottom-0 pt-4 w-full text-color-primary md:hidden">
    
    <nav class="backdrop-blur-md bg-color-blur flex justify-between items-center rounded-md rounded-b-none border border-gray-border px-3 py-3">
        
        <a class="rounded-md rounded-bl-3xl capitalize px-4 py-4 transition-all ease-in-out hover:bg-white/5" href={links[0].url}>
            <IconTimelineEventText width={32} height={32}  />
        </a>    
        <a class="rounded-md capitalize px-4 py-4 transition-all ease-in-out hover:bg-white/5" href={links[1].url}>
            <IconCode width={32} height={32}  />
        </a>    
        <a class="rounded-md capitalize px-4 py-4 transition-all ease-in-out hover:bg-white/5" href={links[2].url}>
            <IconSmartHome width={32} height={32} />
        </a>    
        <a class="rounded-md capitalize px-4 py-4 transition-all ease-in-out hover:bg-white/5" href='/blog'>
            <IconWriting width={32} height={32}  />
        </a>    
        <a class="rounded-md rounded-br-3xl capitalize px-4 py-4 transition-all ease-in-out hover:bg-white/5" href='/stack'>
            <IconStack2 width={32} height={32}  />
        </a>    
    </nav>
    
</div>