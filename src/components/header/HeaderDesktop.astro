---
import { getI18N } from "../../i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

const links = [
    { text: `${i18n.HEADER.NAVBAR.HOME}`, url: `#${i18n.HEADER.NAVBAR.HOME}` },
    { text: `${i18n.HEADER.NAVBAR.EXPERIENCE}`, url: `#${i18n.HEADER.NAVBAR.EXPERIENCE}` },
    { text: `${i18n.HEADER.NAVBAR.PROJECTS}`, url: `#${i18n.HEADER.NAVBAR.PROJECTS}` },
    { text: 'Blog', url: 'https://blog.haiver.dev' }
  ];
---

<header class="sticky top-0  pt-4 w-full flex justify-center">
    
    <nav class=" space-x-1 backdrop-blur flex items-center rounded-md bg-black/10 px-3 py-1">
        
     {links.map((link) => (
          <a class="rounded-md px-3 py-0.5 transition-all ease-in-out duration-300 hover:bg-white/10" href={link.url}>
              {link.text}
          </a>
     ))}
    </nav>
</header>