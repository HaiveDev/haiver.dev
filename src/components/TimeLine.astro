---
import { IconCircleFilled, IconCalendar } from "@tabler/icons-react";

import { getI18N } from "@/i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

const dataTimeLine = [
    {
       title: `${ i18n.SECTION_XP.EXPERIENCES[0].POSITION }`,
       description: `${ i18n.SECTION_XP.EXPERIENCES[0].DESCRIPTION }`,
       fecha: `${ i18n.SECTION_XP.EXPERIENCES[0].TIMEFRAME }` 
    },
    {
       title: `${ i18n.SECTION_XP.EXPERIENCES[1].POSITION }`,
       description: `${ i18n.SECTION_XP.EXPERIENCES[1].DESCRIPTION }`,
       fecha: `${ i18n.SECTION_XP.EXPERIENCES[1].TIMEFRAME }` 
    },
    {
       title: `${ i18n.SECTION_XP.EXPERIENCES[2].POSITION }`,
       description: `${ i18n.SECTION_XP.EXPERIENCES[2].DESCRIPTION }`,
       fecha: `${ i18n.SECTION_XP.EXPERIENCES[2].TIMEFRAME }` 
    } 
]
---

<div class="ms-1.5 space-y-6 border-l-2 border-white/20">
    {dataTimeLine.map((dataTimeLine) => (
        <div class="relative w-full">
            <IconCircleFilled className="absolute z-10 mt-1.5 -ml-[7px] h-3 w-3 text-yellow-500"/>
            <div class="ml-6">
                <h4 class="font-bold text-lg text-yellow-500">{dataTimeLine.title}</h4>
                <p class="text-pretty mt-2 text-base">{dataTimeLine.description}</p>
                <p class="mt-1 text-sm font-semibold text-white/40 flex gap-1 items-center">
                    <IconCalendar width={20} />
                    -<span>{dataTimeLine.fecha}</span>
                </p>
            </div>
        </div>
    ))}
</div>
