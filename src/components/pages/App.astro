---

import SectionContainer from "../SectionContainer.astro";
import Layout from "../../layouts/Layout.astro";
import CopyEmail from "../CopyEmail";
import { getI18N } from "../../i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

---

<Layout title={i18n.SEO_TITLE}>
    <main class="px-4">
        <SectionContainer class="my-20">
            <h1 class="font-Averia font-black w-full text-4xl lg:text-5xl xl:text-6xl">
                {i18n.PRESENTATION_TITLE}
            </h1>
            <div class="mt-2 sm:mt-4 items-center font-Averia sm:flex sm:space-x-2">
                <span class="text-xl sm:text-2xl">
                    { i18n.PRESENTATION_DESCRIPTION }
                </span>
                
            </div>
            <div class="mt-4 sm:mt-2 flex">
                <div class="inline-flex me-1">
                    <span
                        class="rounded-md border border-green-500 bg-green-500/10 px-2.5 py-0.5 font-Averia text-sm text-green-500">
                        {i18n.TAG_CHAMBA}
                    </span>
                </div>
                <div class="mt-2 sm:mt-0">
                    
                    <CopyEmail client:load />
                </div>
            </div>
            <div class="mt-10 max-w-[700px] font-Averia text-lg sm:text-xl">
                <p>
                    {i18n.PARAGRAPH_DESCRIPTION}
                </p>
            </div>
        </SectionContainer>

        <SectionContainer class="my-56">
            <p>
                - Experiencia
            </p>
        </SectionContainer>
        <SectionContainer class="my-56">
            <p>
                - Proyectos
            </p>
        </SectionContainer>
    </main>
</Layout>

