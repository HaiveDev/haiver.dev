---

import Layout from "../../layouts/Layout.astro";
import SectionContainer from "../SectionContainer.astro";

import CopyEmail from "../CopyEmail";
import BadgeSocial from "../BadgeSocial.astro"

import { IconBrandGithub, IconBrandLinkedin, IconBrandDiscord } from "@tabler/icons-react";

import { getI18N } from "../../i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

---

<Layout title={i18n.SEO_TITLE}>
    <main class="px-4">
        <SectionContainer class="my-20">
            <h1 class="font-Averia font-black w-full text-4xl lg:text-5xl xl:text-6xl">
                {i18n.PRESENTATION_TITLE}
            </h1>
            <div class="mt-0 sm:mt-2 font-Averia sm:flex items-center sm:space-x-2">
                <span class="text-lg sm:text-xl">
                    { i18n.PRESENTATION_DESCRIPTION }
                </span>
                <a href="" class=' block w-max sm:inline  text-green-500 animate-background-shine cursor-pointer justify-center rounded-md border border-green-500 bg-[linear-gradient(110deg,#22c55e1a,50%,#22c55e66,55%,#22c55e1a)] bg-[length:250%_100%] px-2.5 py-0.5 text-sm'>
                    {i18n.TAG_CHAMBA}
                </a>
            </div>
            
            <div class="mt-4 flex flex-wrap gap-2">
                <CopyEmail client:load />
                <BadgeSocial href="https://github.com/HaiveDev" class="">
                    <span class="hidden sm:block">
                        Linkedin
                    </span>
                    <IconBrandLinkedin width={16}/>
                </BadgeSocial>
                <BadgeSocial href="https://github.com/HaiveDev" class="">
                    <span class="hidden sm:block">
                        GitHub
                    </span>
                    <IconBrandGithub width={16}/>
                </BadgeSocial>
                <BadgeSocial href="https://discord.com/users/897660552892002304" class="">
                    <span class="hidden sm:block">
                        Discord
                    </span>
                    <IconBrandDiscord width={16}/>
                </BadgeSocial>
            </div>
            <div class="mt-10 max-w-[700px] font-Averia text-lg sm:text-xl">
                <p>
                    {i18n.PARAGRAPH_DESCRIPTION}
                </p>
            </div>
        </SectionContainer>

        <SectionContainer class="my-56">
            <p>
                - Experiencia
            </p>
        </SectionContainer>
        <SectionContainer class="my-56">
            <p>
                - Proyectos
            </p>
        </SectionContainer>
    </main>
</Layout>

