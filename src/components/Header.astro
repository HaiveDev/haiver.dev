---
import { getI18N } from "@/i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

let ruta = ''
if (currentLocale !== 'es'){
    ruta = `${currentLocale}/`
}

const links = [
    { text: `${i18n.HEADER.NAVBAR.HOME}`, url: `/${ruta}#${i18n.HEADER.NAVBAR.HOME}` },
    { text: `${i18n.HEADER.NAVBAR.EXPERIENCE}`, url: `/${ruta}#${i18n.HEADER.NAVBAR.EXPERIENCE}` },
    { text: `${i18n.HEADER.NAVBAR.PROJECTS}`, url: `/${ruta}#${i18n.HEADER.NAVBAR.PROJECTS}` },
    { text: 'Blog', url: '/blog' }
  ];
---

<header class="sticky z-10 top-0  pt-4 w-full flex justify-center">
    
    <nav class="space-x-1 backdrop-blur flex items-center rounded-md bg-black/10 px-3 py-1">
        
    {links.map((link) => (
        <a class="rounded-md capitalize px-3 py-0.5 transition-all ease-in-out duration-300 hover:bg-white/10" href={link.url}>
            {link.text}
        </a>
    ))}
    </nav>
</header>