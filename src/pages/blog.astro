---
import LayoutBlog from "@/layouts/LayoutBlog.astro";
import SectionContainerBlog from "@/components/blog/SectionContainerBlog.astro";
import HistoryPots from "@/components/blog/HistoryPots.astro";
import BadgeCategorys from "@/components/blog/BadgeCategorys.astro";
import { IconSparkles, IconCategory, IconPlanet, IconAt } from "@tabler/icons-react";
---

<LayoutBlog title="Blog de Haiver">
    <main class="px-4">
        <h1 class="mb-2 mt-20 flex items-center justify-center space-x-4">
            <span class="text-2xl font-extrabold sm:text-3xl md:text-4xl lg:text-5xl">           
                Proximamente
            </span>
            <IconSparkles className="h-full w-8 md:w-10 lg:w-14" />
        </h1>
        <p class="text-pretty text-center text-white/50">
            Blog en desarrollo. ¡<strong>Suscríbete</strong> y te avisaremos cuando esté <strong>listo</strong> para explorar!
        </p>
        <SectionContainerBlog class="justify-center mt-20 gap-4 md:flex">
            <section class="w-full md:w-[784px]">
                <HistoryPots />
            </section>
            <section class="sticky top-20 flex-shrink-0 mt-6 h-min w-full md:mt-0 md:w-[336px] md:-translate-y-2.5">
                <div class="rounded-md border-2 border-white/20 bg-white/5 p-3">
                    <h2 class="flex items-center justify-center space-x-2">
                        <span class="text-center text-base font-bold">Categorías</span>
                        <IconCategory width={16} height={16} />
                    </h2>
                    <BadgeCategorys />
                </div>

                <div class=" relative mt-4 rounded-md border-2 border-white/20 bg-white/5 p-3">
                    <div class="absolute top-0 right-0 m-2">
                        <span class="relative flex h-2 w-2">
                          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                          <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
                        </span>
                    </div>
                    <h2 class="flex items-center justify-center space-x-2">
                        <span class="text-center text-base font-bold">Suscríbete</span>
                        <IconPlanet width={16} height={16} />
                    </h2>
                    <form class="-mx-2 flex flex-wrap" novalidate>
                        <div class="mt-3 grow-[9999] basis-64 px-2">
                            <div class="group relative">
                                <IconAt width={24} 
                                    className="h-full pointer-events-none absolute inset-y-0 left-3 text-white/50" 
                                />
                                <input name="email_address" type="email" required="true" autocomplete="none"
                                    class="block w-full appearance-none rounded-md py-2 pl-12 pr-3 leading-5 shadow ring-1 placeholder:text-white/50 focus:outline-none focus:ring-2 bg-white/5 ring-white/20 sm:text-sm"
                                    placeholder="Suscríbete por correo electrónico" 
                                />
                            </div>
                        </div>
                        
                        <div class="mt-3 flex justify-end grow px-2">
                            <button disabled type="submit"
                                class="rounded-md px-3 py-2 text-sm font-semibold border-white/40 transition-all duration-300 hover:bg-white/20 bg-white/15">
                                Suscribirme
                            </button>
                        </div>
                    </form>
                    
                </div>
            </section>
            
        </SectionContainerBlog>
    </main>
</LayoutBlog>