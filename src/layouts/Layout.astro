---
import { ViewTransitions } from "astro:transitions";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ScrollToTopButton from "@/components/ScrollTopBtn";
import { getI18N } from "@/i18n";

interface Props {
title: string;
}

const { title } = Astro.props;

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<!doctype html>
<html lang="es" class="dark">

<head>
    <title>{title}</title>

    <meta name="title" content={title} />
    <meta charset="UTF-8" />
    <meta name="description" content={i18n.SEO_DESCRIPTION} />
    <meta name="keywords"
        content="Haiver, ImHaiver, haiver.dev, Desarrollador, Developer, Frontend Developer, Desarrollador Frontend, Portafolio, Portafolio Haiver, Pagina Haiver, Haiver's webpage" />
    <meta name="author" content="Haiver" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://haiver.dev/" />
    <meta property="og:owners" content="Haiver" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={i18n.SEO_DESCRIPTION} />
    <meta property="og:image" content="/banner.png" />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://haiver.dev/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={i18n.SEO_DESCRIPTION} />
    <meta property="twitter:image" content="/banner.png" />

    <meta name="url" content="https://haiver.dev/" />
    <meta name="audience" content="all" />
    <meta name="language" content="Spanish" />
    <meta name="robots" content="index, follow" />
    <meta name="revisit-after" content="7 days" />
    <ViewTransitions />
</head>

<body class="relative bg-neutral-950 selection:bg-purple-200/20 selection:text-gray-400 text-white">
    <div class="absolute h-screen object-cover pointer-events-none">
        <img src="/background.webp" alt="background"
            class="opacity-20 h-screen w-screen object-cover blur-3xl fixed" />
    </div>
    <svg class="pointer-events-none fixed isolate z-50 opacity-70 mix-blend-soft-light h-full w-full">
        <filter id="noise">
            <feTurbulence type="fractalNoise" baseFrequency="0.7" numOctaves="4" stitchTiles="stitch"></feTurbulence>
        </filter>
        <rect width="100%" height="100%" filter="url(#noise)"></rect>
    </svg>

    <div class="relative z-10">
        <Header />

        <slot />

        <Footer />
        <ScrollToTopButton client:load />
    </div>
    <style is:global>
        @font-face {
            font-family: "mona-sans";
            src:
                url("/fonts/Mona-Sans.woff2") format("woff2"),
                url("/fonts/Mona-Sans.ttf") format("truetype");
        }

        html {
            font-family: mona-sans, system-ui, sans-serif;
            scroll-behavior: smooth;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            background: rgb(10, 10, 10);
            backdrop-filter: blur(10px);
            border-radius: 5px;
        }

        ::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
            border-radius: 5px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: rgba(255, 255, 255, 0.5);
        }

        /* #header-nav {
            animation: blur linear both;
            animation-timeline: scroll();
            animation-range: 0 100px;
        }

        @keyframes blur {
            to {
                box-shadow:
                    0px 0px 50px 0px rgba(0, 0, 0, 0.1),
                    0px 0px 0 1px rgba(0, 0, 0, 0.3);
                background: rgba(0, 0, 0, 0.3);
                backdrop-filter: blur(15px);
            }
        } */
    </style>
</body>

</html>